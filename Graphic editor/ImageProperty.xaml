<Window x:Class="Graphic_editor.ImageProperty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphic_editor"
        mc:Ignorable="d"
        Title="Image property" Height="150" Width="250" Icon="Icons/properties.ico"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Margin="5" Width="60">Width</Label>
            <TextBox x:Name="tbWidth" Margin="5" Width="100" VerticalContentAlignment="Center" TextChanged="Width_TextChanged"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Margin="5" Width="60">Height</Label>
            <TextBox x:Name="tbHeight" Margin="5" Width="100" VerticalContentAlignment="Center" TextChanged="Height_TextChanged"/>
        </StackPanel>
        <Button x:Name="btnSaveChanges" Margin="5" Width="80" Click="BtnSaveChanges_Click">Save</Button>
    </StackPanel>
</Window>
